<Page
    x:Class="DiscordUWP.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DiscordUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid RenderTransformOrigin="0.494,0.481">

        <TextBlock
            FontSize="36"
            SelectionChanged="TextBlock_SelectionChanged"
            Text="About app"
            TextWrapping="Wrap" />
        <Image
            Margin="475,70,350,346"
            RenderTransformOrigin="1.005,0.453"
            Source="Assets\logoDixercord-removebg-preview.png" />

        <Button
            Width="35"
            Height="33"
            Margin="18,53,0,0"
            VerticalAlignment="Top"
            Click="Back_Click"
            Content="⬅️"
            RenderTransformOrigin="0.686,2.061" />
        <TextBlock
            Width="809"
            Height="47"
            Margin="84,301,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="22"
            Text="Dixercord - made by TripodFound. Not associated or affiliated with Discord, inc."
            TextWrapping="Wrap" />


    </Grid>
</Page>
